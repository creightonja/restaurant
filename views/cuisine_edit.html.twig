<html>
    <head>
        <title></title>
    </head>
    <body>

        <h1>Update the {{ cuisine.getCuisineName }} cuisine. </h1>
        <div>
            <form action="/cuisine/{{ cuisine.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">
                <label for="cuisine_name">Rename your cuisine:</label>
                <input id="cuisine_name" name="cuisine_name" type="text">

                <button type="submit">Update</button>
            </form>
        </div>
        <div>
            <form action="/cuisine/{{ cuisine.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">

                <button type="submit">Delete this cuisine</button>
            </form>
        </div>

    </body>
</html>
